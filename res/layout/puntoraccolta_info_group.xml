<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rifiuti_middle"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/fragment_horizontal_margin"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingRight="@dimen/fragment_horizontal_margin"
        android:paddingTop="@dimen/fragment_horizontal_margin" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CRM"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/rifiuti_green_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tiporaccolta_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="carta cartone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/rifiuti_dark" />
            <TextView
                android:id="@+id/info_tv"
                android:text="sfusi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/rifiuti_dark" />
         </LinearLayout>
         <ImageView 
             android:id="@+id/tiporaccolta_img"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_crz_grey"/>
    </LinearLayout>

</LinearLayout>