<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/fragment_horizontal_margin" >

    <ImageView
        android:id="@+id/drawer_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/navigation_drawer_horizontal_drawable_padding" />

    <TextView
        android:id="@+id/drawer_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

</LinearLayout>